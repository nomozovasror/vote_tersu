# ===========================================
# API BACKEND CONFIGURATION
# ===========================================
# Copy this file to .env and update values for your university

# ===========================================
# HEMIS API CONFIGURATION
# ===========================================
# Your university's HEMIS API endpoint
EXTERNAL_API_URL=https://student.tersu.uz/rest/v1/data/employee-list
# API token from HEMIS admin panel
EXTERNAL_API_TOKEN=your-hemis-api-token-here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=sqlite:///./data/voting.db

# ===========================================
# SECURITY SETTINGS (CHANGE IN PRODUCTION!)
# ===========================================
# JWT Secret Key - Generate: openssl rand -hex 32
SECRET_KEY=your-very-long-random-secret-key-minimum-32-characters-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================================
# ADMIN CREDENTIALS (CHANGE IN PRODUCTION!)
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-strong-admin-password-here

# ===========================================
# SERVER URLs
# ===========================================
# Backend URL (used for image paths)
# Format: http://SERVER_HOST:API_PORT
BACKEND_URL=http://213.230.97.43:2014

# Frontend URL (used for CORS)
# Format: http://SERVER_HOST:WEB_PORT
FRONTEND_URL=http://213.230.97.43:2013

# ===========================================
# UNIVERSITY IDENTIFICATION (Optional)
# ===========================================
UNIVERSITY_NAME=Termiz davlat universiteti
UNIVERSITY_SHORT_NAME=TerDU

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
# Number of Uvicorn workers (recommended: 2 * CPU cores)
WEB_CONCURRENCY=6

# WebSocket connection limits
MAX_CONNECTIONS_PER_EVENT=500
MAX_TOTAL_CONNECTIONS=2000
